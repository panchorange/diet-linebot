{
    "name": "diet-linebot",
    "module": "index.ts",
    "type": "module",
    "private": true,
    "devDependencies": {
        "@biomejs/biome": "^2.2.2",
        "@mermaid-js/mermaid-cli": "^11.9.0",
        "@types/bun": "latest",
        "dotenv-cli": "^10.0.0",
        "prisma": "^6.14.0",
        "prisma-erd-generator": "^2.0.4",
        "prisma-markdown": "^3.0.1"
    },
    "peerDependencies": {
        "typescript": "^5"
    },
    "dependencies": {
        "@google/genai": "^1.11.0",
        "@google/generative-ai": "^0.24.1",
        "@line/bot-sdk": "^10.0.0",
        "@prisma/client": "^6.14.0",
        "@types/express": "^5.0.3",
        "canvas": "^3.2.0",
        "chart.js": "^4.5.0",
        "express": "^5.1.0",
        "node-cron": "^4.2.1",
        "nodejs-polars": "^0.21.1",
        "polars": "^0.0.1"
    },
    "scripts": {
        "dev": "bun --hot src/index.ts",
        "build": "bun build src/index.ts --outdir ./dist",
        "start": "bun src/index.ts",
        "db:generate": "bun prisma generate",
        "db:migrate": "bun prisma migrate dev",
        "db:studio": "bun prisma studio",
        "docs:generate": "bun prisma generate && ./node_modules/.bin/mmdc -i docs/database/ERD.mmd -o docs/database/ERD.svg -b transparent",
        "lint": "biome check .",
        "lint:fix": "biome check --write ."
    },
    "prisma": {
        "seed": "bun prisma/seed.ts"
    }
}
